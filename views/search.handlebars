<div class="container">
  <h3>Search for a vehicle on Community Car Share</h3>
  <div class="container">
    <form action="/api/search/type/" method="GET">
      <select class="form-select" aria-label="Default select example" name="type">
        <option selected>What Type of Vehicle?</option>
        <option value="Car">Car</option>
        <option value="Truck">Truck</option>
        <option value="Van">Van</option>
      </select>
      <button type="submit" class="btn btn-success">SEARCH TYPE</button>
    </form>
  </div>
  <br>

  {{!-- <div class="mb-3"> --}}
    <form action="/api/search/make" method="GET">
      <label for="make" class="form-label">Make</label>
      <input type="text" class="form-control" name="make" id="make" placeholder="Make of vehicle">
      {{!--
  </div> --}}
  <button type="submit" class="btn btn-success">SEARCH MAKE</button>
  </form>
  <br>
  <form action="/api/search/model" method="GET">
    <div class="mb-3">
      <label for="model" class="form-label">Model</label>
      <input type="text" class="form-control" name="model" id="modelupdate" placeholder="Model of vehicle">
    </div>
    <button type="submit" class="btn btn-success">SEARCH MODEL</button>
  </form>
  <br>
  <form action="/api/search/year" method="GET">
    <div class="mb-3">
      <label for="year" class="form-label">Year</label>
      <input type="text" name="year" class="form-control" id="yearupdate" placeholder="Year of vehicle">
    </div>
    <button type="submit" class="btn btn-success">SEARCH YEAR</button>
  </form>
  <br>
  <form action="api/search/color" method="GET">
    <div class="mb-3">
      <label for="color" class="form-label">Color</label>
      <input type="text" class="form-control" name="color" id="colorupdate" placeholder="Color of vehicle">
    </div>
    <button type="submit" class="btn btn-success">SEARCH COLOR</button>
  </form>
  <br>
  <form action="/api/search/price">
    <div class="mb-3">
      <label for="price" class="form-label">Price</label>
      <input type="text" class="form-control" name="price" id="priceupdate" placeholder="Price to rent your car">
    </div>
    <button type="submit" class="btn btn-success">SEARCH PRICE</button>
  </form>
</div>
