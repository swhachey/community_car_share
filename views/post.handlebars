<script>

  var threeVehicles = document.querySelector("#threeVehicles");
  var selectedVehicle = document.querySelector("#vehicleSelectedCar");
  var selectedVehicle2 = document.querySelector("#vehicleSelectedTruck");
  var selectedVehicle3 = document.querySelector("#vehicleSelectedVan");
  var vehicQuestion = document.querySelector("#vehicleQuestion");
  var vehicInput = document.querySelector("#vehicleInput");
  selectedVehicle.hidden = true
  selectedVehicle2.hidden = true
  selectedVehicle3.hidden = true
  vehicQuestion.hidden = false
  vehicInput.hidden = true

  $(".form-select").change(function () {
    threeVehicles.hidden = true
    vehicQuestion.hidden = true
    vehicInput.hidden = false

    if (this.value == 'Car') {
      selectedVehicle.hidden = false
    } else if (this.value == "Truck") {
      selectedVehicle2.hidden = false
    } else if (this.value == "Van") {
      selectedVehicle3.hidden = false
    }

  });

</script>